{
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": true
  },
  "npm": {
    "allowSameVersion": true
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "package.json",
      "out": ["package.json"]
    }
  },
  "hooks": {
    "before:init": "pnpm run test"
  }
}
